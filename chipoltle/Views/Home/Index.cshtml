@using chipoltle.ViewModel;
@model OrderSelections


<div class="jumbotron">
    <h1>@Html.Raw(GlobalResource.Index_cshtml_Execute_Fresh_Ingredients)</h1>
    <p class="lead">@Html.Raw(GlobalResource.Index_cshtml_Execute_Welcome_to_Chipole)</p>
  
</div>

<div class="container">  @*bootstap containers wrap site contents in a grid system*@
  
      @Html.ActionLink("Show All Orders", "ShowOrders")

    <h2 class="visible-md visible-lg">@Html.Raw(GlobalResource.Index_cshtml_Execute_Please_Place_an_Order)</h2>  @*bootstrap visible-md means element is only visible on screen size medium or large*@
    <div class="col-md-4 col-md-offset-4"> @*bootstrap grid system is 12 elements wide here we are offseting by 4 on each side*@
    
      <p>   
           @using (Html.BeginForm()){
               var attributes = new { @class = "form-control" }; @*// set attributes for dropdown element --this is an anonymous class
                                                                       bootstrap form-control class formats elements*@
    <div class="form-group">
        @*form-group is a bootstrap class for formating elements*@
        @Html.Label(GlobalResource.Index_cshtml_Execute_Select_your_classification)
        @Html.DropDownListFor(model => model.PriceGroup, Model.CustomerGroup, attributes)
    </div>
                     <div class="form-group"> @*form-group is a bootstrap class for formating elements*@
                         @Html.Label(GlobalResource.Index_cshtml_Execute_Step_1__Choose_a_Entree)
                         @Html.DropDownListFor(model => model.Item, Model.SelectItems, attributes)
                   </div>
                 <div class="form-group">
                     @Html.Label(GlobalResource.Index_cshtml_Execute_Step_2__Choose_a_Meat)
                     @Html.DropDownListFor(model => model.Meat, Model.SelectMeats,attributes)
                    </div>
                  <div class="form-group">
                      @Html.Label(GlobalResource.Index_cshtml_Execute_Step_3__Choose_Beans)
                      @Html.DropDownListFor(model => model.Beans, Model.SelectBeans, attributes)
                  </div>

               <button type="submit" class="btn btn-success btn-lg">
                   @Html.Raw(GlobalResource.Index_cshtml_Execute_Order) @*bootstrap button class*@
                   <span class="glyphicon glyphicon-thumbs-up"></span>  @*bootstrap embedded a glyphicon on a button*@
               </button>

  

           } 
</p>
       
    </div>
   
</div>